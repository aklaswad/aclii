_aclii_exec_json () {
  if [ "${1:0:1}" = "/" ] || [ "${1:0:1}" = "~" ]; then
    binname=$1
  else
    binname="$(dirname "$0")"/"$1"
  fi
  exec "$binname" "$2"
}

_aclii_exec () {
  if [ "${1:0:1}" = "/" ] || [ "${1:0:1}" = "~" ]; then
    binname=$1
  else
    binname="$(dirname "$0")/$1"
  fi
  exec "$binname" "${@:2}"

}


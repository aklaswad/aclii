{
  "name": "aclii",
  "version": "0.0.9",
  "type": "module",
  "description": "Abstract Command Line Interface Interface",
  "main": "index.js",
  "bin": {
    "aclii": "bin/aclii-launcher.sh",
    "_aclii_main": "bin/cli.js"
  },
